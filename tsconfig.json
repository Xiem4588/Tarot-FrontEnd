{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es6", // Có thể bạn muốn cập nhật target thành es2017 thay vì es6 //esnext
    "module": "esnext",
    "resolveJsonModule": true,
    "lib": ["es2017", "dom"],
    "types": ["react", "react-native", "node"] // Thêm các kiểu bạn cần sử dụng trong ứng dụng, bao gồm react và react-native
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
